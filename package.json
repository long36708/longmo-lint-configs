{
  "name": "longmo-lint-configs",
  "version": "1.0.0",
  "description": "lint configs for vue2 & vue3",
  "author": {
    "name": "longmo"
  },
  "type": "module",
  "main": "index.js",
  "files": [
    "dist",
    ".gitignore",
    ".lintstagedrc.mjs",
    ".prettierrc.mjs",
    ".stylelintignore",
    "eslint.config.mjs",
    "stylelint.config.mjs",
    "README.md",
    "internal/eslint-config",
    "internal/prettier-config",
    "internal/stylelint-config"
  ],
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 turbo build",
    "build:eslint-config": "pnpm run build --filter=longmo-eslint-config",
    "build:prettier-config": "pnpm run build --filter=longmo-prettier-config",
    "build:stylelint-config": "pnpm run build --filter=longmo-stylelint-config",
    "clean": "node ./scripts/clean.mjs",
    "changeset": "pnpm exec changeset",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm -r run stub --if-present",
    "prepare": "is-ci || husky",
    "reinstall": "pnpm clean --del-lock && pnpm install",
    "sort": "npx sort-package-json",
    "update:deps": "npx taze -r -w",
    "version": "pnpm exec changeset version && pnpm install --no-frozen-lockfile"
  },
  "devDependencies": {
    "cross-env": "catalog:",
    "husky": "catalog:",
    "is-ci": "catalog:",
    "lint-staged": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:"
  },
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "node": ">=18.20.4",
    "pnpm": ">=9.12.0"
  },
  "volta": {
    "node": "18.20.6"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
